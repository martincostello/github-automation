{
  "name": "github-automation",
  "version": "4.0.0",
  "private": true,
  "description": "GitHub automation",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write eslint.config.mjs src/**/*.ts tests/**/*.ts",
    "format-check": "prettier --check eslint.config.mjs src/**/*.ts tests/**/*.ts",
    "generate": "npm run build && npm run package",
    "lint": "eslint src/**/*.ts --fix",
    "package": "npm run package:dotnet-release && npm run package:dotnet-upgrade-report && npm run package:dotnet-version-report && npm run package:get-dotnet-repos && npm run package:get-rebase-repos && npm run package:get-sdk-repos && npm run package:is-dotnet-change-available",
    "package:dotnet-release": "esbuild lib/dotnet-release/main.js --bundle --minify --outdir=actions/dotnet-release/dist --packages=bundle --platform=node --sourcemap --target=node24.0.0",
    "package:dotnet-upgrade-report": "esbuild lib/dotnet-upgrade-report/main.js --bundle --minify --outdir=actions/dotnet-upgrade-report/dist --packages=bundle --platform=node --sourcemap --target=node24.0.0",
    "package:dotnet-version-report": "esbuild lib/dotnet-version-report/main.js --bundle --minify --outdir=actions/dotnet-version-report/dist --packages=bundle --platform=node --sourcemap --target=node24.0.0",
    "package:get-dotnet-repos": "esbuild lib/get-dotnet-repos/main.js --bundle --minify --outdir=actions/get-dotnet-repos/dist --packages=bundle --platform=node --sourcemap --target=node24.0.0",
    "package:get-rebase-repos": "esbuild lib/get-rebase-repos/main.js --bundle --minify --outdir=actions/get-rebase-repos/dist --packages=bundle --platform=node --sourcemap --target=node24.0.0",
    "package:get-sdk-repos": "esbuild lib/get-sdk-repos/main.js --bundle --minify --outdir=actions/get-sdk-repos/dist --packages=bundle --platform=node --sourcemap --target=node24.0.0",
    "package:is-dotnet-change-available": "esbuild lib/is-dotnet-change-available/main.js --bundle --minify --outdir=actions/is-dotnet-change-available/dist --packages=bundle --platform=node --sourcemap --target=node24.0.0",
    "test": "vitest run",
    "publish": "npm run format && npm run lint && npm run generate",
    "all": "npm run publish && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martincostello/github-automation.git"
  },
  "keywords": [
    "actions",
    "git",
    "github"
  ],
  "author": {
    "name": "Martin Costello",
    "url": "https://martincostello.com/"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/martincostello/github-automation/issues"
  },
  "homepage": "https://github.com/martincostello/github-automation#readme",
  "dependencies": {
    "@actions/core": "3.0.0",
    "@actions/exec": "3.0.0",
    "@actions/github": "9.0.0",
    "@actions/io": "3.0.2",
    "@octokit/plugin-paginate-rest": "14.0.0",
    "@octokit/plugin-rest-endpoint-methods": "17.0.0",
    "fast-xml-parser": "5.3.5",
    "undici": "7.21.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@stylistic/eslint-plugin": "5.7.1",
    "@types/node": "24.10.12",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/eslint-plugin": "1.6.6",
    "@vitest/ui": "4.0.18",
    "esbuild": "0.27.3",
    "eslint": "9.39.2",
    "eslint-plugin-github": "6.0.0",
    "eslint-plugin-prettier": "5.5.5",
    "globals": "17.3.0",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
